<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/homeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:elevation="5dp">


    <ImageView
        android:id="@+id/homeItemImage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:src="@drawable/fillers" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
        android:background="#88000000">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeItemTitle"
            android:layout_centerInParent="true"
            android:text="Fillers"
            android:textColor="#dddddd"
            android:textSize="40sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeItemDesc"
            android:text="Find out more about fillers"
            android:textColor="#bbbbbb"
            android:textSize="20sp"
            android:layout_below="@+id/homeItemTitle"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>